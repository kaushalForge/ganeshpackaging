<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-50 min-h-screen px-4 py-6 md:p-12">

  <div class="container mx-auto">

    <!-- Header & Stats -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-8">
      <div>
        <h1 class="text-2xl sm:text-3xl font-bold text-gray-800">Product Dashboard</h1>
        <p class="text-sm text-gray-500 mt-1">
          Total Products: <%= products.length %>
          <% if(products.length > 0) { %>
            | Average Price: Rs <%= Math.round(products.reduce((sum,p)=>sum+(p.price||0),0)/products.length) %>
          <% } %>
        </p>
      </div>

    <div class="flex gap-3 mt-2 sm:mt-0">
  <a href="/admin/add" 
     class="bg-black text-white px-4 py-2 rounded-lg text-sm font-medium hover:opacity-90 transition">
    + Add Product
  </a>

  <!-- Logout Button -->
  <form method="POST" action="/admin/logout">
    <button type="submit" 
            class="bg-red-500 text-white px-4 py-2 rounded-lg text-sm font-medium hover:opacity-90 transition">
      Logout
    </button>
  </form>
</div>

    </div>

    <!-- ================= MOBILE CARDS ================= -->
    <div class="grid gap-4 sm:hidden">
      <% products.forEach(product => { %>
        <div class="bg-white rounded-2xl shadow-lg p-4 flex gap-4 hover:shadow-xl transition">

          <!-- Product Image -->
          <img src="<%= product.images && product.images.length > 0 ? product.images[0] : 'https://via.placeholder.com/150?text=No+Image' %>"
               class="w-24 h-24 object-cover rounded-xl border"/>

          <div class="flex-1 flex flex-col justify-between">
            <div>
              <h2 class="font-semibold text-gray-800"><%= product.name %></h2>
              <p class="text-sm text-gray-600 mt-1">Rs <%= product.price %></p>
              <p class="text-xs text-gray-500 mt-2 line-clamp-2"><%= product.description %></p>
            </div>

            <div class="flex gap-3 mt-3 text-sm font-semibold">
              <!-- Edit -->
              <a href="/admin/edit/<%= product._id %>"
                 class="flex-1 text-center bg-blue-500 text-white py-1 rounded-md hover:opacity-90 transition">
                Edit
              </a>

              <!-- Delete -->
              <form method="POST" action="/admin/delete/<%= product._id %>" 
                    class="flex-1 delete-form">
                <button type="submit" 
                        class="text-center bg-red-500 text-white py-1 rounded-md w-full hover:opacity-90 transition">
                  Delete
                </button>
              </form>
            </div>
          </div>

        </div>
      <% }) %>
    </div>

    <!-- ================= DESKTOP TABLE ================= -->
    <div class="hidden sm:block bg-white rounded-2xl shadow-lg overflow-hidden mt-6">
      <div class="overflow-x-auto">
        <table class="min-w-full text-sm text-left">
          <thead class="bg-gray-100 text-gray-600 uppercase text-xs">
            <tr>
              <th class="px-6 py-4">Image</th>
              <th class="px-6 py-4">Name</th>
              <th class="px-6 py-4">Price</th>
              <th class="px-6 py-4">Description</th>
              <th class="px-6 py-4">Actions</th>
            </tr>
          </thead>

          <tbody class="divide-y divide-gray-200">
            <% products.forEach(product => { %>
              <tr class="hover:bg-gray-50 transition">
                <td class="px-6 py-4">
                  <img src="<%= product.images && product.images.length > 0 ? product.images[0] : 'https://via.placeholder.com/100?text=No+Image' %>"
                       class="w-16 h-16 object-cover rounded-xl border"/>
                </td>
                <td class="px-6 py-4 font-medium"><%= product.name %></td>
                <td class="px-6 py-4">Rs <%= product.price %></td>
                <td class="px-6 py-4 max-w-xs truncate"><%= product.description.substring(0,80) %>...</td>
                <td class="px-6 py-4">
                  <div class="flex gap-3 text-sm font-semibold">
                    <a href="/admin/edit/<%= product._id %>" class="text-blue-600 hover:underline">Edit</a>

                    <form method="POST" action="/admin/delete/<%= product._id %>" class="delete-form">
                      <button type="submit" class="text-red-600 bg-transparent hover:underline">
                        Delete
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

  </div>

  <script>
    // Confirm before deleting
    document.querySelectorAll('.delete-form').forEach(form => {
      form.addEventListener('submit', function(e) {
        const confirmed = confirm('Are you sure you want to delete this product? This action cannot be undone.');
        if (!confirmed) e.preventDefault();
      });
    });
  </script>
</body>
</html>
