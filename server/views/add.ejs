<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Product</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>

  <body class="bg-gray-50 min-h-screen">
    <div class="max-w-3xl mx-auto px-4 py-10">
      <!-- Header -->
      <div class="flex items-center justify-between mb-8">
        <h1 class="text-2xl sm:text-3xl font-bold text-gray-800">
          Add Product
        </h1>
        <a href="/admin/dashboard" class="text-sm text-blue-600">‚Üê Back</a>
      </div>

      <!-- Card -->
      <div class="bg-white rounded-2xl shadow p-6 sm:p-8">
        <!-- Image Preview -->
        <div class="mb-6">
          <p class="text-sm font-medium text-gray-600 mb-2">Image Preview</p>
          <img
            src="https://developers.elementor.com/docs/assets/img/elementor-placeholder-image.png"
            alt="Preview"
            class="w-full h-52 object-cover rounded-xl border"
            id="previewImage"
          />
        </div>

        <form method="POST" action="/admin/add" class="space-y-5">
          <!-- Name -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">
              Product Name
            </label>
            <input
              name="name"
              placeholder="Enter product name"
              required
              class="w-full border rounded-lg px-4 py-3 focus:ring-2 focus:ring-black outline-none"
            />
          </div>

          <!-- Description -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">
              Description
            </label>
            <textarea
              name="description"
              rows="4"
              placeholder="Enter product description"
              required
              class="w-full border rounded-lg px-4 py-3 focus:ring-2 focus:ring-black outline-none resize-none"
            ></textarea>
          </div>

          <!-- Price -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">
              Price (Rs)
            </label>
            <input
              type="number"
              name="price"
              placeholder="Enter price"
              required
              class="w-full border rounded-lg px-4 py-3 focus:ring-2 focus:ring-black outline-none"
            />
          </div>

          <!-- Image URL -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">
              Image URL
            </label>
            <input
              name="image"
              placeholder="Paste image URL"
              required
              oninput="preview(this.value)"
              class="w-full border rounded-lg px-4 py-3 focus:ring-2 focus:ring-black outline-none"
            />
          </div>

          <!-- Buttons -->
          <div class="flex flex-col sm:flex-row gap-3 pt-4">
            <button
              type="submit"
              class="flex-1 bg-black text-white py-3 rounded-lg font-semibold hover:opacity-90 transition"
            >
              Add Product
            </button>

            <a
              href="/admin/dashboard"
              class="flex-1 text-center border py-3 rounded-lg font-semibold"
            >
              Cancel
            </a>
          </div>
        </form>
      </div>
    </div>

    <script>
      function preview(url) {
        document.getElementById("previewImage").src = url;
      }
    </script>
  </body>
</html>
