<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Add Product</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-50 min-h-screen">
  <div class="max-w-3xl mx-auto px-4 py-10">

    <!-- Header -->
    <div class="flex items-center justify-between mb-8">
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-800">Add Product</h1>
      <a href="/admin/dashboard" class="text-sm text-blue-600 hover:underline">‚Üê Back</a>
    </div>

    <!-- Card -->
    <div class="bg-white rounded-2xl shadow-lg p-6 sm:p-8 space-y-6">

    <!-- Image Previews -->
<div>
  <p class="text-sm font-medium text-gray-600 mb-2">Image Previews</p>
  <div class="grid grid-cols-2 sm:grid-cols-3 gap-4" id="imagePreviewContainer">
    <!-- 6 placeholders for preview -->
    <% for (let i = 0; i < 6; i++) { %>
      <div class="w-full rounded-xl overflow-hidden border bg-gray-100">
        <img src="https://developers.elementor.com/docs/assets/img/elementor-placeholder-image.png"
             id="preview-<%= i %>"
             alt="Image <%= i + 1 %>"
             class="w-full h-full object-cover aspect-[3/2]"/>
      </div>
    <% } %>
  </div>
  <p class="text-xs text-gray-500 mt-1">Add up to 6 images.</p>
</div>

      <!-- Form -->
      <form id="productForm" class="space-y-5">
        <!-- Name -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Product Name</label>
          <input name="name" placeholder="Enter product name" required
                 class="w-full border rounded-lg px-4 py-3 focus:ring-2 focus:ring-black outline-none"/>
        </div>

        <!-- Description -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
          <textarea name="description" rows="4" placeholder="Enter product description" required
                    class="w-full border rounded-lg px-4 py-3 focus:ring-2 focus:ring-black outline-none resize-none"></textarea>
        </div>

        <!-- Price -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Price (Rs)</label>
          <input type="number" name="price" placeholder="Enter price" required
                 class="w-full border rounded-lg px-4 py-3 focus:ring-2 focus:ring-black outline-none"/>
        </div>

        <!-- Image URLs -->
        <div>
          <p class="block text-sm font-medium text-gray-700 mb-2">Product Images</p>
          <div id="imageInputsContainer" class="space-y-3">
            <% for (let i = 0; i < 6; i++) { %>
              <div class="flex gap-2 items-center">
                <input type="url" name="images" placeholder="Enter image URL"
                       class="flex-1 border rounded-lg px-4 py-2 focus:ring-2 focus:ring-black outline-none"
                       oninput="updatePreview(<%= i %>, this.value)"/>
              </div>
            <% } %>
          </div>
          <p class="text-xs text-gray-500 mt-1">You can add up to 6 images.</p>
        </div>

        <!-- Buttons -->
        <div class="flex flex-col sm:flex-row gap-3 pt-4">
          <button type="submit" class="flex-1 bg-black text-white py-3 rounded-lg font-semibold hover:opacity-90 transition">
            Add Product
          </button>

          <a href="/admin/dashboard" class="flex-1 text-center border py-3 rounded-lg font-semibold hover:bg-gray-100 transition">
            Cancel
          </a>
        </div>
      </form>

    </div>
  </div>

  <script>
    // Update preview for each image input
    function updatePreview(index, value) {
      const img = document.getElementById(`preview-${index}`);
      img.src = value || 'https://via.placeholder.com/300x150?text=No+Image';
    }

    // Submit form
    document.getElementById("productForm").addEventListener("submit", async function(e) {
      e.preventDefault();

      // Collect all image URLs (filter out empty ones)
      const images = Array.from(document.querySelectorAll('#imageInputsContainer input'))
                          .map(input => input.value.trim())
                          .filter(Boolean);

      const formData = {
        name: this.name.value.trim(),
        description: this.description.value.trim(),
        price: Number(this.price.value),
        category: "general",
        images
      };

      try {
        const res = await fetch(`/add`, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(formData)
        });

        const data = await res.json();

        if (res.ok) {
          window.location.href = "/admin/dashboard";
        } else {
          alert(data.message || "Failed to add product");
        }
      } catch (err) {
        alert("Server error");
        console.error(err);
      }
    });
  </script>

</body>
</html>
