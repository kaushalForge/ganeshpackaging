<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Edit Product</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-50 min-h-screen">
  <div class="max-w-3xl mx-auto px-4 py-10">
    <!-- Header -->
    <div class="flex items-center justify-between mb-8">
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-800">Edit Product</h1>
      <a href="/admin/dashboard" class="text-sm text-blue-600 hover:underline">‚Üê Back</a>
    </div>

    <!-- Card -->
    <div class="bg-white rounded-2xl shadow-lg p-6 sm:p-8 space-y-6">
      <!-- Image Previews -->
      <div>
        <p class="text-sm font-medium text-gray-600 mb-2">Current Images</p>
        <div class="grid grid-cols-2 sm:grid-cols-3 gap-4" id="imagePreviewContainer">
          <% for (let i = 0; i < 6; i++) { %>
            <img
              src="<%= product.images && product.images[i] ? product.images[i] : 'https://developers.elementor.com/docs/assets/img/elementor-placeholder-image.png' %>"
              id="preview-<%= i %>"
              alt="Image <%= i+1 %>"
              class="w-full h-36 object-cover rounded-xl border"
              onerror="this.src='https://developers.elementor.com/docs/assets/img/elementor-placeholder-image.png'"
            />
          <% } %>
        </div>
      </div>

      <!-- Form -->
      <form method="POST" action="/admin/edit/<%= product._id %>" class="space-y-5">
        <!-- Name -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Product Name</label>
          <input
            name="name"
            value="<%= product.name || '' %>"
            required
            class="w-full border rounded-lg px-4 py-3 focus:ring-2 focus:ring-black outline-none"
          />
        </div>

        <!-- Description -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
          <textarea
            name="description"
            rows="4"
            required
            class="w-full border rounded-lg px-4 py-3 focus:ring-2 focus:ring-black outline-none resize-none"
          ><%= product.description || '' %></textarea>
        </div>

        <!-- Price -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Price (Rs)</label>
          <input
            type="number"
            name="price"
            value="<%= product.price || '' %>"
            required
            class="w-full border rounded-lg px-4 py-3 focus:ring-2 focus:ring-black outline-none"
          />
        </div>

        <!-- Images Inputs -->
        <div>
          <p class="block text-sm font-medium text-gray-700 mb-2">Product Images</p>
          <div id="imageInputsContainer" class="space-y-3">
            <% for (let i = 0; i < 6; i++) { %>
              <div class="flex gap-2 items-center">
                <input
                  type="url"
                  name="images"
                  value="<%= product.images && product.images[i] ? product.images[i] : '' %>"
                  placeholder="Enter image URL"
                  class="flex-1 border rounded-lg px-4 py-2 focus:ring-2 focus:ring-black outline-none"
                  oninput="updatePreview(<%= i %>, this.value)"
                />
              </div>
            <% } %>
          </div>
          <p class="text-xs text-gray-500 mt-1">You can add up to 6 images. Leave empty if no image.</p>
        </div>

        <!-- Buttons -->
        <div class="flex flex-col sm:flex-row gap-3 pt-4">
          <button
            type="submit"
            class="flex-1 bg-black text-white py-3 rounded-lg font-semibold hover:opacity-90 transition"
          >
            Update Product
          </button>

          <a
            href="/admin/dashboard"
            class="flex-1 text-center border py-3 rounded-lg font-semibold hover:bg-gray-100 transition"
          >
            Cancel
          </a>
        </div>
      </form>
    </div>
  </div>

  <script>
    // Update individual image previews
    function updatePreview(index, value) {
      const img = document.getElementById(`preview-${index}`);
      img.src = value || 'https://via.placeholder.com/300x150?text=No+Image';
    }
  </script>
</body>
</html>
